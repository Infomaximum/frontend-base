{
	"name": "@im/base",
	"version": "1.0.0",
	"main": "src/index.module.ts",
	"author": "IM FrontEnd Team",
	"repository": {
		"type": "git",
		"url": "https://git.office.infomaximum.com/frontend/base-pkg"
	},
	"dependencies": {
		"@im/core": "5.1.0",
		"@im/utils": "5.1.0",
		"@im/platform": "10.0.0",
		"@emotion/react": "11.8.2",
		"antd": "4.22.1",
		"autobind-decorator": "2.4.0",
		"lodash": "4.17.21",
		"graphql-tag": "2.12.6",
		"react": "18.2.0",
		"react-router": "6.3.0",
		"react-router-dom": "6.3.0",
		"reselect": "4.0.0",
		"mobx": "6.6.1",
		"mobx-react": "7.5.2"
	},
	"devDependencies": {
		"@types/react": "18.0.15",
		"@types/react-dom": "18.0.6",
		"@types/lodash": "4.14.182",
		"typescript": "4.7.4",
		"husky": "4.3.8",
		"lint-staged": "10.5.4",
		"jira-prepare-commit-msg": "1.6.2",
		"conventional-changelog-cli": "2.2.2"
	},
	"scripts": {
		"test": "cross-env NODE_ENV=test jest --passWithNoTests",
		"lint": "tsc --noEmit && eslint --cache --ignore-path ../../.eslintignore src/ --ext .ts,.tsx,.js,.jsx --quiet",
		"prettier": "prettier --find-config-path --ignore-path ../../.prettierignore --write ./src",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "yarn run test",
			"prepare-commit-msg": "jira-prepare-commit-msg"
		}
	},
	"lint-staged": {
		"*": [
			"yarn prettier"
		],
		"*.(js|jsx|ts|tsx|json)": [
			"yarn lint"
		]
	},
	"jira-prepare-commit-msg": {
		"messagePattern": "$M\n[$J]"
	},
	"publishConfig": {
		"registry": "https://npm.office.infomaximum.com/repository/npm-hosted/"
	}
}