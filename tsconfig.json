{
  "extends": "@infomaximum/config/tsconfig.lib.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "jsx": "preserve",
    "declaration": true,
    "incremental": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "declarationDir": "dist",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false
  },
  "exclude": ["/node_modules/", "**/node_modules", "**/.*/", "./dist"],
  "include": ["src"]
}
